<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">
    <!--
        Added the constraints for entity RpmComment.
    -->
    <changeSet id="20210925192302-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="result_id"
                                 baseTableName="rpm_comment"
                                 constraintName="fk_rpm_comment__result_id"
                                 referencedColumnNames="id"
                                 referencedTableName="rpm_result"/>

        <addForeignKeyConstraint baseColumnNames="project_id"
                                 baseTableName="rpm_comment"
                                 constraintName="fk_rpm_comment__project_id"
                                 referencedColumnNames="id"
                                 referencedTableName="rpm_project"/>

        <addForeignKeyConstraint baseColumnNames="action_id"
                                 baseTableName="rpm_comment"
                                 constraintName="fk_rpm_comment__action_id"
                                 referencedColumnNames="id"
                                 referencedTableName="rpm_action"/>

        <addForeignKeyConstraint baseColumnNames="character_id"
                                 baseTableName="rpm_comment"
                                 constraintName="fk_rpm_comment__character_id"
                                 referencedColumnNames="id"
                                 referencedTableName="rpm_character"/>
    </changeSet>
</databaseChangeLog>
